" enable syntax highlighting
syntax on

" disable auto intending
set paste

" <TAB> inserts two spaces
set tabstop=2
set softtabstop=2
set shiftwidth=2
set expandtab

" display cursor position
set ruler

" show matching brackets
set showmatch

" show title in console title bar
set title

" color settings
"set t_Co=256
"set background=dark
"colorscheme solarized
"colorscheme wombat
